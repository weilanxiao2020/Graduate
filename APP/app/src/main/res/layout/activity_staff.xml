<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".module.staff.StaffLoginActivity">

    <ImageView
        android:src="@drawable/ic_staff"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_staff_id"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:digits="0123456789"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:maxLength="9"
        android:text="461237889"
        android:hint="请输入许可"/>

    <EditText
        android:id="@+id/et_staff_code"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:maxLength="6"
        android:inputType="number"
        android:digits="0123456789"
        android:text="541354"
        android:hint="请输入代码"/>

    <Button
        android:id="@+id/btn_staff_login"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_staff_login"/>

</LinearLayout>