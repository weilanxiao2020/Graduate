<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/iv_order"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_order"
        android:layout_alignTop="@id/iv_order"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:text="999999999"/>

    <TextView
        android:id="@+id/tv_order_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_order"
        android:layout_below="@id/tv_order_id"
        android:layout_marginBottom="5dp"
        android:textSize="10sp"
        android:text="四川成都"/>


    <TextView
        android:id="@+id/tv_order_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_order"
        android:layout_alignBottom="@id/iv_order"
        android:layout_marginBottom="5dp"
        android:textSize="10sp"
        android:text="120.00N,20.1564E"/>

    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="02-29"/>

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="10:39"/>
    </LinearLayout>



</RelativeLayout>